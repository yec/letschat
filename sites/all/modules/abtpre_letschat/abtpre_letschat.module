/**
 * Implements hook_user_load().
 */
function abtpre_letschat_user_load($users) {
  foreach($users as $user) {
    $result = db_select('abtpre_letschat_users_leader','a')
                ->fields('a')
                ->condition('uid', $user->uid, '=')
                ->execute()
                ->fetchObject();
    if (!empty($result)) {
      $user->leader_uid = $result->leader_uid;
    }
  }
}

