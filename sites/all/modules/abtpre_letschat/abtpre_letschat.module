function _abtpre_letschat_employee_node($yid, $uid, $type) {

    $query = new EntityFieldQuery();
    $result = $query
      ->entityCondition('entity_type', 'node')
      ->entityCondition('bundle', $type)
      ->fieldCondition('field_person', 'uid', $uid)
      ->fieldCondition('field_yid', 'value', $yid)
      ->execute();
    
    if (!empty($result)) {
      $nid = array_pop(array_keys($result['node']));  
      return $nid;
    } else {
      return false;
    }
}

function _abtpre_letschat_leader_action($yid, $uid, $type, $purpose) {
    global $user;
    $destination = drupal_get_destination();
  
    if ($nid = _abtpre_letschat_employee_node($yid, $uid, $type)) {

      if ($purpose == 'view') {
        return l(str_replace('_', ' ',$type), "node/$nid", array('attributes'=>array('style'=>'color:green')));
      }
      elseif ($purpose == 'progress' || $purpose == 'annual') {

        // Reviewer_uid is self by default
        $reviewer_uid = $user->uid;
        // if letschat admin reviewer uid is the leader id instead of the user logged in as 
        if ($uid !== $user->uid && (user_access('letschat admin') || user_access('admin'))) {
          $reviewer_uid = _abtpre_letschat_leader_uid($uid);
        }
        $type_human = str_replace('_', ' ',$type);
        $query = new EntityFieldQuery();
        $result = $query
          ->entityCondition('entity_type', 'comment')
          ->propertyCondition('nid', $nid)
          ->propertyCondition('uid', $reviewer_uid)
          ->fieldCondition('field_purpose', 'value', $purpose)
          ->execute();

        if (!empty($result)) {
          $cid = array_pop(array_keys($result['comment']));
          if ($type == 'self_assessment') {
            return l('self assessment', "comment/$cid", array('attributes'=>array('style'=>'color:green'),'query' => array('purpose' => $purpose)));
          } else {
            return l("see $type_human review", "comment/$cid", array('attributes'=>array('style'=>'color:green'),'query' => array('purpose' => $purpose)));
          }
        }
        else {
          return l("review $type_human", "comment/reply/$nid", array('attributes'=>array('style'=>'color:red'),'query' => array('destination' => $destination['destination'],'purpose' => $purpose)));
        }
      }
    }

  if ($purpose == 'view'|| ($purpose == 'annual' && $type == 'self_assessment')) {
    return l(str_replace('_', ' ','create '.$type)
      , "node/add/".str_replace('_', '-',$type)
      , array('query'=>array('destination' => $destination['destination'],'yid' => $yid,'uid'=>$uid)));
  }
  
  return str_replace('_', ' ', "can't review ".$type." yet. create first.");
}

