    $years[$i.($i+1)] = $i . ' – ' . ($i + 1);
  }
   
  return $years;
}

/**
 * Returns current performance year
 * in format 20112012
 */
function _abtpre_letschat_curyear() {
  $curyear = date('Y');

  // the data in form month day
  // Oct 1 is 1001
  if (date('nd') >= '1001') {
    return $curyear.($curyear+1);
  }
  else {
    return ($curyear-1).$curyear;
  }
}

