function _abtpre_letschat_review_action($nodes, $type, $purpose) {
  global $user;
  
  if (!isset($nodes[$type])) {
    return t('Create @type before doing @purpose review',array('@type' => str_replace('_',' ',$type), '@purpose' => $purpose));
  }

  $query = new EntityFieldQuery();
  $result = $query
    ->entityCondition('entity_type', 'comment')
    ->fieldCondition('field_purpose', 'value', $purpose)
    ->propertyCondition('nid', $nodes[$type]->nid)
    ->propertyCondition('uid', $user->uid)
    ->execute();

  if (!empty($result)) {
    $cid = array_pop(array_keys($result['comment']));
    return l(t("View @purpose review of @type", array('@purpose' => $purpose, '@type' => str_replace('_', ' ', $type))), 'comment/'.$cid, array('attributes' => array('style' => 'color:green'), 'query' => array('purpose' => $purpose, 'destination' => '/')));
  }
  else {
    return l(t("Do @purpose review of @type", array('@purpose' => $purpose, '@type' => str_replace('_', ' ', $type))), 'comment/reply/'.$nodes[$type]->nid, array('attributes' => array('style' => 'color:red'), 'query' => array('purpose' => $purpose, 'destination' => '/')));
  }
}

