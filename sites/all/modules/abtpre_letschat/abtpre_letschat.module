    }
    array_unshift($form['#validate'], 'abtpre_letschat_validate');
  }

  // Alter comment form
  if (strpos($form_id, 'comment_node') !== false) {
    if (isset($qs['purpose'])) {
      $form['field_purpose']['und']['#default_value'] = $qs['purpose'];
    }
    //dsm($form);
  }
}

