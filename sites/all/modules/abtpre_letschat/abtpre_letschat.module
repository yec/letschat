/**
 * Implements hook_node_view_alter()
 */
function abtpre_letschat_node_view_alter(&$build) {
  // remove Add new comment
  unset($build['links']['comment']);
  if (!empty($build['comments'])) {
    foreach (element_children($build['comments']['comments']) as $number) {if (is_numeric($number)) {
      unset($build['comments']['comments'][$number]['links']['comment']['#links']['comment-reply']);
      if (!abtpre_letschat_can_edit_comment($number)) {
        unset($build['comments']['comments'][$number]['links']['comment']['#links']['comment-edit']);
      }
    }}
  }
}

function abtpre_letschat_comment_view_alter(&$build) {
  // remove Add new comment
  //unset($build['links']['comment']);
  unset($build['links']['comment']['#links']['comment-reply']);
  if (!abtpre_letschat_can_edit_comment($build['comment_body']['#object']->cid)) {
    unset($build['links']['comment']['#links']['comment-edit']);
  }
}

/**
 * Implements hook_user_load().
 */
function abtpre_letschat_user_load($users) {
  foreach($users as $user) {
    $result = db_select('abtpre_letschat_users_leader','a')
      ->fields('a')
      ->condition('uid', $user->uid, '=')
      ->execute()
      ->fetchObject();
    if (!empty($result)) {
      $user->leader_uid = $result->leader_uid;
      $user->weight = $result->weight;
      $user->depth = $result->depth;
    } else {
      $user->leader_uid = 0;
      $user->weight = 0;
      $user->depth = 1;
    }
  }
}

