function abtpre_letschat_org_tree_data($accounts, $parents = array(), $depth = 1) {
  $accounts = array_reverse($accounts);
  return _abtpre_letschat_org_tree_data($accounts, $parents, $depth);
}

function _abtpre_letschat_org_tree_data(&$accounts, $parents, $depth) {
  $tree = array();
  while ($account = array_pop($accounts)) {
    $tree[$account['uid']] = array(
      'user' => $account,
      'below' => array(),
    );

    $next = end($accounts);
    if ($next && $next['depth'] > $depth) {
      // Recursively call _menu_tree_data to build the sub-tree.
      $tree[$account['uid']]['below'] = _abtpre_letschat_org_tree_data($accounts, $parents, $next['depth']);
      // Fetch next link after filling the sub-tree.
      $next = end($accounts);
    }
    if (!$next || $next['depth'] < $depth) {
      break;
    } 
  }
  return $tree;
}

function _abtpre_letschat_org_tree_form($accounts_tree) {
  $form = &drupal_static(__FUNCTION__,array('#tree' => true));
  foreach ($accounts_tree as $data) {
    $item = $data['user'];
    $form[$item['uid']]['#item'] = $item;
    $form[$item['uid']]['title'] = array(
      '#markup' => $item['name'],
    );
    $form[$item['uid']]['weight'] = array(
        '#type' => 'weight',
        '#delta' => 500,
        '#title_display' => 'invisible',
        '#default_value' => $item['weight'],
    );
    $form[$item['uid']]['luid'] = array(
      '#type' => 'hidden',
      '#default_value' => $item['leader_uid'],
    );
    $form[$item['uid']]['uid'] = array(
      '#type' => 'hidden',
      '#default_value' => $item['uid'],
    );
    
    if ($data['below']) {
      _abtpre_letschat_org_tree_form($data['below']);
    }
  }

  return $form;
}

function abtpre_letschat_org_form_submit(&$form, &$form_state) {
  $emails = str_getcsv($form_state['values']['add']['people']);
  foreach ($emails as $record) {
    // Get email address
    preg_match('/<(.+)>/', $record, $matches);
    if (!isset($matches[1])) {
      continue;
    }
    $email = $matches[1];

    // Get name
    preg_match('/\s*(.*?)\s*</', $record, $matches);
    if (!isset($matches[1]) || empty($matches[1])) {
      continue;
    }
    $name = $matches[1];

    // User is in db?
    if (db_query("SELECT COUNT(*) FROM {users} WHERE name = :name or mail = :mail", array(':mail' => $email, ':name' => $name))->fetchField()) {
      drupal_set_message("$name with email $email already exists, not added.", 'warning');
      continue;
    }

    if (valid_email_address($email) && !($error = user_validate_name($name))) {
      $account = (object) array();
      $account->mail = $email;
      $account->init = $email;
      $account->name = $name;
      $account->roles[4] = 'staff'; 
      $account->status = 0;
      $account->timezone = 'Australia/Melbourne';
      $account->pass = 'asdf';
      $edit = (array) $account;
      user_save($account, $edit);
      drupal_set_message("$name with email $email added.", 'status');
    } else {
      drupal_set_message("$name with email $email wasn't added. $error", 'error');
    }
  }

  // need to save order in which post sends cause parent needs
  // to be saved first.
  $count = 1;
  foreach ($form_state['input'] as $uid => $value) {
    if (is_numeric($uid)) {

      $user = array(
        'uid' => $uid,
        'weight' => $value['weight'],
        'leader_uid' => $value['luid'],
        'depth' => 1,
        'p1' => $count++,
      );

      // Set depth by finding parent depth first
      $parent = db_select('abtpre_letschat_users_leader','a')
        ->fields('a')
        ->condition('uid',$value['luid'])
        ->execute()
        ->fetchAssoc();

      if (isset($parent)) {
        $user['depth'] = $parent['depth'] + 1;
      }

      db_merge('abtpre_letschat_users_leader')
        ->key(array('uid' => $uid))
        ->fields($user)
        ->execute();
    }
  }
}

